    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/passButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#402264"
                android:text="pass"
                android:textColor="#BC9BFF"
                android:fontFamily="serif"/>

            <Button
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#402264"
                android:text="play"
                android:textColor="#BC9BFF"
                android:fontFamily="serif"/>

            <ImageButton
                android:id="@+id/revolutionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@null"
                android:contentDescription="TODO"
                android:src="@drawable/revbutton" />

            <ImageButton
                android:id="@+id/payTaxesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:contentDescription="TODOO"
                android:src="@drawable/paytaxesimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="Jesters selected:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#402264"
                    android:textColorHighlight="#000000"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/addjbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#402264"
                    android:text="+"
                    android:textColor="#BC9BFF"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/jesterNumSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#402264"
                    android:textColorHighlight="#000000"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/minusjbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:backgroundTint="#402264"
                    android:text="-"
                    android:textColor="#BC9BFF"
                    android:fontFamily="serif"/>

