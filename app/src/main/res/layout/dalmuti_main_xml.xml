                    android:background="@null"
                    android:contentDescription="seamstress card"
                    android:src="@drawable/seamstress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
